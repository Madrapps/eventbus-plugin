<idea-plugin>
    <id>com.madrapps.eventbus-plugin</id>
    <name>GreenRobot EventBus</name>
    <vendor email="th.saravana@gmail.com" url="https://thsaravana.github.io">Madrapps</vendor>

    <description><![CDATA[
    <p>Support navigation for <b>Java/Kotlin</b> projects that uses greenrobot's <a href="http://greenrobot.org/eventbus/">EventBus</a> library</p>
    <p>Features</p>
    TODO
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <version>0.1</version>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="com.madrapps.eventbus.subscribe.SubscribeLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.madrapps.eventbus.subscribe.SubscribeLineMarkerProvider"/>

        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="com.madrapps.eventbus.post.PostLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.madrapps.eventbus.post.PostLineMarkerProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>